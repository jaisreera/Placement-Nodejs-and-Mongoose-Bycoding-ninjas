<link rel="stylesheet" href="/css/form.css">

<section>
    <div class="container">
            <form action="/employee/edit_interview_detail/<%= interview._id %>" method="post">
        
            <label for="fname">Company Name</label>
            <input type="text" id="fname" name="company_name" value="<%= interview.company_name  %>" required>
        
           
            <label for="date" style="padding: 8px 0px;">Date</label>
            <input
            class="subInput"
            type="date"
            name="date"
            placeholder="Interview Date"
            value="<%= interview.date %>"
            style="display: inline-block;"
            />
            <% if(interview.students.length>0) {%>
            <% for(var i of interview.students){  %>

                <div>
                <label for="fname">Student Name</label>
                <input type="text" id="fname" name="student_name" value="<%= i.name %>" required>
                <input type="hidden" name="student_id" value="<%= i.email %>">

                <label for="result" style=" display: block; padding: 0px 8px;">Result</label>
                <select id="country" name="result" value="<%= i.result %>">
                <optgroup label="Result">
                <option name="selected" value="Selected">Selected</option>
                <option name="not_selected" value="Not Selected">
                    Not Selected
                </option>
                <option name="on_hold" value="On Hold">On Hold</option>
                <option name="on_hold" value="On Hold">Didn't Attend</option>
                <option name="on_hold" value="Interview Pending">
                    Interview Pending
                </option>
                </optgroup>
            </select>




                
                </div>

            <% } %>

        
            <input type="submit" value="EDIT INTERVIEW DETAILS" style="display: block; margin: 2% 40%; padding: 10px 25px;">
    
            <% } %>

        
            </form>
    </div>
    
</section>
